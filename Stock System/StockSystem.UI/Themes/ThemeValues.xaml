<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

	<!--Color-->
	
	<SolidColorBrush x:Key="BackgroundKey" Color="#89B2FC" />
	<system:Double x:Key="GlobalFontSize">10</system:Double>
	<FontFamily x:Key="GlobalFontFamily" >Arial</FontFamily>
	<Brush x:Key="GlobalFontFrontgroundColor">Black</Brush>

	<!--Layout-->
	
	<system:Double x:Key="FooterHeight">20</system:Double>

	<!--Grid-->
	
	<GridLength x:Key="MenuRowHeight">Auto</GridLength>
	<GridLength x:Key="ContentRowHeight">Auto</GridLength>
	<GridLength x:Key="FooterHeightGridLength">20</GridLength>
	
	<!--Fonts-->
	
	<system:Double x:Key="HeaderFontSize">20</system:Double>
	<system:Double x:Key="SubHeaderFontSize">14</system:Double>
	<FontFamily x:Key="HeaderFontFamily">Segoe UI</FontFamily>
	<Brush x:Key="HeaderFontFrontGround">#FF00AADE</Brush>


</ResourceDictionary>